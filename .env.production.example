# Production Environment Configuration Template
# Copy this file to .env.production and modify the values

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DATABASE_URL=sqlite:///./data/monitoring.db

# Domain Configuration (change this to your domain)
DOMAIN=your-domain.com

# Frontend
REACT_APP_API_URL=https://${DOMAIN}
NODE_ENV=production
GENERATE_SOURCEMAP=false

# Security (IMPORTANT: change this in production)
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGINS=https://${DOMAIN}

# Optional Production Services
# REDIS_URL=redis://redis:6379/0
# MONITORING_URL=https://your-monitoring-service.com